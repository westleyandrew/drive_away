<div>
  <div class= "page-grid">
    <div class="card-grid">
      <% @cars.each do |car| %>
        <div class="cards">
          <figure>
            <img class="card-image" src="<%= car.photo %>" alt="">
          </figure>
                <div class="card-product-infos">
                  <h5 class="title-index links_text_pages_index"><%= link_to car.title, car_path(car) %></h5>
                  <%= car.brand %>
                  <%= car.model %>
                <div>Address: <%= car.address%></div>
              <div>Price per day: Â£<%= car.price %>0</div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="map-holder">
      <div class="mapouter">
          <div
          id="map"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        <div>
      </div>
  </div>
</div>
